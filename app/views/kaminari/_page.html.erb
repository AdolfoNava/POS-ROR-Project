<span class="page<%= ' current' if page.current? %>">
  <% if page.current? %>
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link active' %>
  <% else %>
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "page-item page-link"} %>
  <% end %>
</span>
