<h1>Customers</h1>

<%= link_to "New customer", new_customer_path %>

<div id="customers">
  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Address</th>
        <th>Orders Count</th>
        <th>Edit</th>
      </tr>
      <% @customers.each do |customer| %>
        <tr>
          <%= render customer %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @customers %>
