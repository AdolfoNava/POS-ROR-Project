<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<%= link_to "New order", new_order_path %>

<div id="orders">
  <table class="table table-striped table-bordered border-info">
    <tbody>
      <tr>
        <th>Order Number</th>
        <th>Customer Last Name</th>
        <th>Item Count</th>
        <th>Price Total Due</th>
        <th>Due Date</th>
        <th>Status</th>
        <th>Edit</th>
        <th>Payment</th>
      </tr>
      <% @orders.each do |order|%>
        <tr>
          <%= render order %>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
<%= paginate @orders %>
