<div id="options">
  <%= search_form_for @o, url: options_path, remote: true do |f| %>

    <div class="py-3">
      <%= f.label :name_i_cont_all, "Search by Name of option" %>
      <%= f.text_field :name_i_cont_all, class: "form-control", placeholder: "Enter Last Name here... "  %>
    </div>
    <div class="py-3">
      <%= f.label :category_id_eq, "Search by Category" %>
      <%#= f.select :category_id_eq,Category.all.collect { |c| [ c.name, c.id ] }, class: "form-select-lg" , include_blank: true  %>
      <%= f.select :category_id_eq, options_from_collection_for_select(Category.all, :id, :name, params.dig(:q, :category_id_eq)), { include_blank: 'All categories' }, class: "form-control" %>
    </div>
    <div class="pb-3">
      <%= f.submit "Search",class: "btn btn-primary"%>
    </div>
  <% end %>
  <table class="table table-striped table-bordered text-center">
    <thead>
      <tr>
        <th>Base Price</th>
        <th>Name</th>
        <th>Category Name</th>
        <th>Edit Option</th>
      </tr>
    </thead>
    <tbody>
      <% @options.each do |option| %>
        <tr>
          <%= render option %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
