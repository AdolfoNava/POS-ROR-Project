<%= form_for(option) do |form| %>
  <% if option.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
        <% option.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="py-2">
    <%= form.label :base_price, style: "display: block" %>
    <%= form.text_field :base_price, class: "form-control" %>
  </div>

  <div class="py-2">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="py-2">
    <%= form.label :category_id, style: "display: block" %>
    <%= form.select :category_id, Category.all.collect { |c| [ c.name, c.id ] }, {include_blank: false},  {class: "form-control"} %>
  </div>

  <div class="form-group py-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
